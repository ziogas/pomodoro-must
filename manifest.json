{
  "name": "Pomodoro - MUST",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Checks active tomato.es session and sends annoying notifications if you're not in pomodoro mode.",
  "homepage_url": "https://github.com/ziogas/pomodoro-must",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "notifications",
    "tabs",
    "http://www.tomato.es/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.tomato.es/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
